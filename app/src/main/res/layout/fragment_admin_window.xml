<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainScreen">


    <Button
        android:id="@+id/otwarcie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_margin="34dp"
        android:text="@string/start_work"
        app:layout_constraintEnd_toStartOf="@+id/quiz"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="34dp"
        android:text="@string/quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/otwarcie"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/test_set_text"
        android:layout_margin="34dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otwarcie"
        />

    <TextView
        android:id="@+id/test_text_data"
        android:text="ffffffffffffffff"
        android:layout_margin="34dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_set_text"
        />

    <Button
        android:id="@+id/test_button_set"
        android:layout_margin="34dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_text_data"
        />

</androidx.constraintlayout.widget.ConstraintLayout>